# Copy to .env and adjust. NOT for production (default creds are for local dev only).
# cp .env.example .env && docker compose up -d

# Postgres (used by docker-compose and by registry service)
POSTGRES_USER=morezero
POSTGRES_PASSWORD=morezero_secret
POSTGRES_DB=morezero
POSTGRES_PORT=5432

# Registry HTTP port on host (container listens on 8080)
REGISTRY_HTTP_PORT=8080

# NATS (optional override)
NATS_CLIENT_PORT=4222
NATS_MONITOR_PORT=8222

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Optional: when running registry binary directly (not in compose), set DATABASE_URL
# DATABASE_URL=postgres://morezero:morezero_secret@localhost:5432/morezero?sslmode=disable

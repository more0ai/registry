# Copy to .env and adjust. NOT for production (default creds are for local dev only).
# Registry uses platform Postgres (start platform first: platform/start.ps1). See platform/compose.yaml.

# Postgres â€“ platform instance (host when using registry compose; set POSTGRES_HOST=host.docker.internal for container)
POSTGRES_USER=morezero
POSTGRES_PASSWORD=morezero
POSTGRES_DB=registry
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Registry HTTP port on host (container listens on 8080)
REGISTRY_HTTP_PORT=8090

# NATS (optional override)
NATS_CLIENT_PORT=4222
NATS_MONITOR_PORT=8222

# Log level (debug, info, warn, error)
LOG_LEVEL=info

